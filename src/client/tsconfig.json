{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}