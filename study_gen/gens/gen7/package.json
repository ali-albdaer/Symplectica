{
  "name": "project-odyssey",
  "version": "0.1.0",
  "description": "High-Fidelity Multiplayer N-Body Space Simulator",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "node --watch server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node --test test/*.test.js",
    "start:server": "node server/index.js"
  },
  "dependencies": {
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
