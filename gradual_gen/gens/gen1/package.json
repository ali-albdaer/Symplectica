{
  "name": "n-body-space-sim",
  "version": "0.1.0",
  "description": "High-Fidelity Multiplayer N-Body Space Simulator",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:physics && npm run build:server && npm run build:client",
    "build:shared": "npm run build -w @nbody/shared",
    "build:physics": "npm run build -w @nbody/physics-core",
    "build:server": "npm run build -w @nbody/server",
    "build:client": "npm run build -w @nbody/client",
    "build:all": "npm run build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w @nbody/server",
    "dev:client": "npm run dev -w @nbody/client",
    "server": "npm run start -w @nbody/server",
    "client": "npm run dev -w @nbody/client",
    "test": "npm run test --workspaces --if-present",
    "test:physics": "npm run test -w @nbody/physics-core",
    "test:orbits": "npm run test:orbits -w @nbody/server",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rimraf packages/*/dist client/dist server/dist"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
