{
  "name": "@nbody/physics-core",
  "version": "0.1.0",
  "description": "Isomorphic N-Body physics engine for space simulation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker/physics-worker.d.ts",
      "import": "./dist/worker/physics-worker.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@nbody/shared": "*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  }
}
