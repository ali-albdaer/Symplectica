{
  "name": "@space-sim/shared",
  "version": "1.0.0",
  "description": "Shared physics library for N-Body Space Simulator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./physics": {
      "import": "./dist/physics/index.js",
      "types": "./dist/physics/index.d.ts"
    },
    "./math": {
      "import": "./dist/math/index.js",
      "types": "./dist/math/index.d.ts"
    },
    "./bodies": {
      "import": "./dist/bodies/index.js",
      "types": "./dist/bodies/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@types/node": "^20.10.0"
  },
  "files": [
    "dist"
  ]
}
