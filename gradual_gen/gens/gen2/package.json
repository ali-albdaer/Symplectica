{
  "name": "n-body-space-simulator",
  "version": "1.0.0",
  "description": "High-Fidelity Multiplayer N-Body Space Simulator",
  "type": "module",
  "scripts": {
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd packages/server && npm run build",
    "build:client": "cd packages/client && npm run build",
    "dev:server": "cd packages/server && npm run dev",
    "dev:client": "cd packages/client && npm run dev",
    "test": "npm run test:shared && npm run test:server",
    "test:shared": "cd packages/shared && npm test",
    "test:server": "cd packages/server && npm test",
    "start": "cd packages/server && npm start"
  },
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/client"
  ],
  "keywords": [
    "n-body",
    "physics",
    "space",
    "simulator",
    "multiplayer",
    "three.js",
    "webassembly"
  ],
  "author": "Space Simulator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
