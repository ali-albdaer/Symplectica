{
  "name": "solar-system-sim",
  "version": "0.1.0",
  "private": true,
  "description": "Physically accurate, deterministic multiplayer space simulation",
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "build:rust": "cd rust && cargo build --release",
    "build:wasm": "cd rust/wasm && wasm-pack build --target web --out-dir ../../client/src/wasm/pkg",
    "build:shared": "cd shared && npx tsc",
    "build:server": "cd server && npx tsc",
    "build:client": "cd client && npx vite build",
    "build": "npm run build:wasm && npm run build:shared && npm run build:server && npm run build:client",
    "dev:server": "cd server && npx tsx src/index.ts",
    "dev:client": "cd client && npx vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test:rust": "cd rust && cargo test",
    "test:ts": "npx vitest run",
    "test": "npm run test:rust && npm run test:ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
