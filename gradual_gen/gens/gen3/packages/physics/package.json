{
  "name": "@nbody/physics",
  "version": "0.1.0",
  "description": "N-Body Physics WASM Core with TypeScript bindings",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./pkg": {
      "import": "./pkg/physics.js",
      "types": "./pkg/physics.d.ts"
    }
  },
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build --target web --release --out-dir pkg",
    "build:ts": "tsc",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "cargo test",
    "clean": "rimraf dist pkg target"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "physics",
    "n-body",
    "wasm",
    "simulation"
  ]
}
